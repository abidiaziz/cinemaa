{% extends 'base.html.twig' %}

{% block title %}Seance index{% endblock %}

{% block body %}
    <h1>Seance index</h1>
    <a class="btn btn-primary px-4" href="{{ path('app_seance_new') }}">+</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>HeureDebut</th>
                <th>Date</th>
                <th>HeureFin</th>
                <th>Film</th>
                <th>Salle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.heureDebut ? seance.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ seance.date ? seance.date|date('Y-m-d') : '' }}</td>
                <td>{{ seance.heureFin ? seance.heureFin|date('H:i:s') : '' }}</td>
                <td>{{ seance.film.nom }}</td>
                <td>{{ seance.salle.num }}</td>
                <td>
                    <a class="btn btn-sm btn-primary"  href="{{ path('app_seance_show', {'id': seance.id}) }}">show</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('app_seance_edit', {'id': seance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
