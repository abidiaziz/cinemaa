{% extends 'base.html.twig' %}

{% block title %}Place index{% endblock %}

{% block body %}
    <h1 class="text-primary" style="color: #336699;">Places</h1>

    <a class="btn btn-primary px-4" href="{{ path('app_place_new') }}">+</a>

    <table class="table table-striped table-hover" style="background-color: #f5f5f5; margin-top: 20px;">
        <thead>
            <tr style="background-color: #eeeeee;">
                <th>Id</th>
                <th>Numero</th>
                <th>Rayon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for place in places %}
                <tr>
                    <td>{{ place.id }}</td>
                    <td>{{ place.numero }}</td>
                    <td>{{ place.rayon }}</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="{{ path('app_place_show', {'id': place.id}) }}">show</a>
                        <a class="btn btn-sm btn-warning" href="{{ path('app_place_edit', {'id': place.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-secondary">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}